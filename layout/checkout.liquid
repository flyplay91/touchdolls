//  	     	jQuery('.main__content .radio__label__accessory ul').first().find('li').last().before(html);
        jQuery('.main__content .radio__label__accessory ul').last().append(html);
      
        var html =  '<img src="//cdn.shopify.com/s/files/1/1063/9730/files/mcafee-badge-mod2_e6ee24ca-9dc4-412e-aa75-c9de11bcde03.jpg?11889286286822136317" style="position: absolute; top: 0; right:0;">';
        jQuery('.section--payment-method .section__header').append(html);
        jQuery('.section__text').text('All transactions are secure & encrypted.')
      });
    </script>
  </body>
</html>
