        	$('#back-url').attr('href', location.href.substr(searchIndex + 9));
      	}
          
      	$('.size-chart-span').on('click', function() {
        	$('ul.size-chart-select.ui-tabs-nav.ui-helper-reset.ui-helper-clearfix.ui-widget-header.ui-corner-all').toggle();
      	});
      
      	$('ul.size-chart-select.ui-tabs-nav.ui-helper-reset.ui-helper-clearfix.ui-widget-header.ui-corner-all li').on('click', function() {
            if ($(window).width() < 415) {
